{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "lib": ["es2021", "dom"],
    "target": "es2021"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
}